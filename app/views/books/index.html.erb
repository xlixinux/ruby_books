<h1><%= @books.size %> Books</h1>

<% @books.each do |book| %>
  <article>
    <header>
      <h2><%= book.title %></h2>
    </header>
    <p>
      <%= book.description %>
    </p>
    <table>
      <tr>
        <th>Released:</th>
        <td><%= book.released_on %></td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= book.rating %></td>
      </tr>
    </table>
  </article>
<% end %>
