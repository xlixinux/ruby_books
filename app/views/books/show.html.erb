  <article>
    <header>
      <h1><%= @book.title %></h1>
    </header>
    <p>
      <%= @book.description %>
    </p>
    <table>
      <tr>
        <th>Released:</th>
        <td><%= @book.released_on %></td>
        <td> (<%= time_ago_in_words(@book.released_on).capitalize %>)</td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= @book.rating %></td>
      </tr>
      <tr>
        <th>Price</th>
        <td><%= format_price(@book) %></td>
      </tr>
      <tr>
      <td>
      <%= link_to "Books", books_path %>
      </td>
      </tr>
    </table>
  </article>